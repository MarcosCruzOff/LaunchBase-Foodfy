{% extends 'layout-manager.njk' %}

{% block content %}
    <section>
        <div class="header-title">
            <h2>Gerenciar receitas</h2>
            <a class="button primary" href="/admin/recipes/create">
                Nova Receita</a>
        </div>
        <div class="cardAdmin">
            {% for recipe in recipes %}
                <div class="card" id="{{ recipe.id }}">
                    <img src="{{ recipe.image }}" alt="{{ recipe.title_recipe }}"/>
                    <div class="card-description">
                        <h3>{{ recipe.title_recipe }}</h3>
                        <p>por {{ recipe.chef_name }}</p>
                        <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock content %}