{% extends 'layout-manager.njk' %}

{% block content %}
    <section>
        <div class="header-title">
            <h2>Gerenciar chefs</h2>
            <a class="button primary" href="/admin/chef/create">
                Novo Chef</a>
        </div>

        <div class="chefs">
            {% for chef in chefs %}
                <div class="chef">
                    <img src="{{ chef.avatar_url }}" alt="foto:{{ chef.name_url }}">
                        <div class="card-description">
                            <h3>{{ chef.name_chef }}</h3>
                            <a href="/admin/chef/{{ chef.id }}">Visualizar</a>
                        </div>
                </div>
            {% endfor %}
        </div>
    </section>

    <div 
        class="pagination" 
        data-page={{ pagination.page }} 
        data-total={{ pagination.total }} 
        data-filter={{filter}}>
            
    </div>

    
{% endblock content %}